# Music Command Center — Environment Variables
# Copy this file to .env and fill in your keys.
# All keys are optional — the app falls back to static data when not configured.

# ── Songstats (RapidAPI) ──
# Free tier: 1,000 hits/month
# Get key at: https://rapidapi.com/songstats-app-songstats-app-default/api/songstats
SONGSTATS_API_KEY=

# ── Spotify Web API ──
# Create app at: https://developer.spotify.com/dashboard
# Client credentials flow — no user auth needed for public data
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# ── Artist Spotify IDs ──
# Find at: open.spotify.com/artist/{id}
JAKKE_SPOTIFY_ID=
ENJUNE_SPOTIFY_ID=
ILU_SPOTIFY_ID=

# ── Instagram Graph API ──
# Requires Meta Business App + long-lived token
# Setup: https://developers.facebook.com/docs/instagram-api/getting-started
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_USER_ID=

# ── YouTube Data API v3 ──
# Free: 10,000 units/day
# Get key at: https://console.cloud.google.com
JAKKE_YOUTUBE_CHANNEL=
YOUTUBE_API_KEY=

# ── Last.fm ──
# Free API key: https://www.last.fm/api/account/create
LASTFM_API_KEY=
JAKKE_LASTFM_ARTIST=Jakke
ENJUNE_LASTFM_ARTIST=Enjune

# ── Odesli/Songlink ──
# Optional: higher rate limits with key. Works without key (10 req/min)
ODESLI_API_KEY=
